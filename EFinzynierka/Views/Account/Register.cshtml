@model EFinzynierka.Models.Register

<h2> Rejestracja</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.ValidationSummary()

    <form sp-controller="Account" asp-action="Register" method="post">
        <div class="form-group">
            <label for="Name">Imie</label>
            <input input asp-for="UserName" type="UserName" class="form-control" id="Name" aria-describedby="Name" placeholder="Wpisz imie">
            <br>
        </div>
        <div class="form-group">
            <label for="Surname">Nazwisko</label>
            <input asp-for="Surname" type="Surname" class="form-control" id="Surname" aria-describedby="Surname" placeholder="Wpisz nazwisko">
            <br>
        </div>
        <div class="form-group">
            <label for="Birthday">Data urodzenia</label><br>

            <input asp-for="Birthday"class="datefield" data-val="true" data-val-required="Date is required"
               id="Birthday" name="Birthday" type="date" />
               
        </div>
        <br>
        <div class="form-group">
            <label for="PhoneNumber">Numer telefonu</label>
            <input input asp-for="PhoneNumber" type="PhoneNumber" class="form-control" id="PhoneNumber" aria-describedby="emailHelp" placeholder="Wpisz nr telefonu">
            <br>
        </div>

        <div class="form-group">

            <label for="Position">Stanowisko pracy</label>
            <select class="form-control">
                <option asp-for="Kierownik">Kierownik</option>
                <option asp-for="Manager">Manager</option>
                <option asp-for="Developer">Developer</option>
            </select>
        </div>
        <br>
        <div class="form-group">
            <label for="exampleInputEmail1">E-mail</label>
            <input input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Wpisz haslo">
            <br>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Haslo</label>
            <input type="password" input asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Haslo">
            <br>
        </div>

        <button type="submit" class="btn btn-primary">Załóż konto</button>
    </form>
}

