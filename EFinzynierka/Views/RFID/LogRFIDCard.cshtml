@model RFIDLog

@{
    ViewData["Title"] = "Odczytywanie karty RFID";
}

<h1>Odczytywanie karty RFID</h1>

<form asp-action="LogRFIDCard">
    <div class="form-group">
        <button type="button" asp-action="ReadFromReader" class="btn btn-secondary" id="read-from-reader">Naciśnij żeby odczytać kartę</button>
    </div>
    <br />
    <label type="text" >@ViewData["Info"]</label>
    <div class="form-group">
        <label type="text" id="CardNumber" name="CardNumber" value="">Numer karty</label>

        <input asp-for="RFIDCardID" class="cardnumber" name="cardnumber" id="cardnumber" value="" />
        <span asp-validation-for="RFIDCardID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsEntry">Rozpoczęcie czy koniec zmiany</label>
        <div class="form-check">
            <input asp-for="IsEntry" class="form-check-input" type="radio" value="true" />
            <label class="form-check-label">Rozpoczęcie</label>
        </div>
        <div class="form-check">
            <input asp-for="IsEntry" class="form-check-input" type="radio" value="false" />
            <label class="form-check-label">Koniec zmiany</label>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Zapisz log</button>
    </div>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

    <script>

        $(document).ready(function () {
            console.log("tyryr");
            $('#read-from-reader').click(function () {
                $.ajax({
                    type: 'POST',
                    url: '/RFID/ReadFromReader',
                    success: function (response) {
                        console.log(response)
                        $('#cardnumber').val(response.cardNumber);
                        console.log(response.CardNumber);
                    }
                });
            });
        });

    </script>
}
